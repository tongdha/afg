<% provide(:title, 'Sign In') %>
	<div id="content">
	  <div class="container">
	    <div class="row">
		  <div class="span12">
		    <div class="well well-form txt-lefty">
              <h3>Sign In</h3>
              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		        <div class="control-group">
		          <div class="controls">
			        <div class="input-prepend">
			          <span class="add-on"><i class="icon-user"></i></span>
			          <%= f.email_field :email, { :placeholder => "Email", :class => "span3", :required => true } %>
			        </div>
				  </div>
			    </div>
			    <div class="control-group"> 
		          <div class="controls">
			        <div class="input-prepend">
			          <span class="add-on"><i class="icon-lock"></i></span>
				      <%= f.password_field :password, { :placeholder => "Password", :class => "span3", :required => true } %>
			        </div>
				  </div>			
		        </div>
                <div class="form-actions">
			      <label class="checkbox">
				    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </label>
			      <button class="btn btn-primary" type="submit">Sign In</button>
                </div> 
              <% end %>	
		      <div class="form-extra">
			    <button class="btn btn-info"><i class="glyphicons-twitter"></i> Login with Twitter</button>
			    <button class="btn btn-danger"><i class="glyphicons-google_plus"></i> Login with Google</button>
			  </div> 
			    <br>
				<div>
		          <%= render "devise/shared/links" %>
				</div> 			  
            </div>
		  </div>  
		</div>  	
	  </div>
	</div>